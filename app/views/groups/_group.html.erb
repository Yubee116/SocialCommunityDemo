<div class="my-6"id="<%= dom_id group %>">
  <div class="flex flex-wrap justify-between width-50%">
    <h1 class=" font-bold mb-2 text-3xl"><%= link_to  group.name, group %></h1>
    <% if action_name == "index" || action_name == "create" %>
      <% if !group.users.include?(current_user) && group.creator_id != current_user.id %>
        <%= form_with(url: memberships_path , method: "post") do |f| %>
          <%= text_field(:memberships, :group_id, value: group.id, class: 'form-control' ,style:"display:none;")  %>
          <%= f.submit 'Join this group',  class: "rounded-lg py-3 ml-2 px-5 bg-green-200 inline-block font-medium cursor-pointer" %>
        <% end %>
      <% elsif group.users.include?(current_user) %>
        <div class="inline-block ml-2">
          <%#= TO Do LEave Group button or link to  %>
        </div>
      <% end %>
    <% end %>
    <% if action_name == "show" || action_name == "update" %>
      <% if current_user.id == group.creator_id%>
        <div class="flex flex-wrap justify-between width-50%">
          <div class="inline-block ml-2">
            <%= link_to 'Edit this group', edit_group_path(group), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex flex-wrap justify-start space-x-2">
    <span
      class="px-4 py-1 rounded-full border border-gray-300 text-gray-500 text-sm flex align-center w-max cursor-pointer active:bg-gray-300 transition duration-300 ease">
      <%= pluralize(group.users.count, "Member") %>
      
    </span>
    <span
      class="px-4 py-1 rounded-full border border-gray-300 text-gray-500 text-sm flex align-center w-max cursor-pointer active:bg-gray-300 transition duration-300 ease">
      <%= pluralize(group.posts.count, "Post") %>
    </span>
    <span
      class="px-4 py-1 rounded-full border border-gray-300 text-gray-500 text-sm flex align-center w-max cursor-pointer active:bg-gray-300 transition duration-300 ease">
      <%= "Last activity #{time_ago_in_words(group.created_at)} ago" if group.created_at %>
    </span>
  </div>
</div>
